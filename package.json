{
  "name": "peribolos-as-a-service",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/open-services-group/peribolos-as-a-service",
  "scripts": {
    "build": "tsc",
    "start": "node lib/index.js",
    "dev": "nodemon src/index.ts",
    "test": "jest",
    "format": "prettier -w 'src/**/*.ts'",
    "lint": "prettier --check 'src/**/*.{ts,js}'; eslint src --ext .ts,.js"
  },
  "dependencies": {
    "@kubernetes/client-node": "0.16.3",
    "probot": "12.2.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@types/jest": "27.5.1",
    "@types/node": "16.11.36",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "28.1.0",
    "nock": "13.2.4",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "smee-client": "1.2.3",
    "ts-jest": "28.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.4"
  },
  "engines": {
    "node": ">= 10.13.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ]
      }
    ],
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "sed -i 's/\\( *newTag: \\).*$/\\1${nextRelease.gitTag}/g' manifests/overlays/stage/kustomization.yaml"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json",
            "manifests/overlays/stage/kustomization.yaml"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  }
}
